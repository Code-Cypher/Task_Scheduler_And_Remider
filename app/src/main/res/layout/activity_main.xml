<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.comlabadmin.task_scheduler_and_remider.MainActivity"
    android:background="@mipmap/bg">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="250dp"
        app:srcCompat="@color/colorgrey"
        android:id="@+id/imageView3"
        android:layout_marginTop="250dp"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        app:srcCompat="@mipmap/applogo"

        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text=" View SCHEDULE  "
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/viewSched"
        android:layout_marginTop="25dp"
        android:background="@color/darkgrey"
        android:layout_below="@+id/addSched"
        android:layout_alignStart="@+id/addSched"
        android:drawableRight="@mipmap/viewsched"
        android:paddingRight="10dp"/>

    <Button
        android:text=" ADD SCHEDULE  "
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/addSched"
        android:layout_marginTop="32dp"
        android:background="@color/darkgrey"
        android:drawableRight="@mipmap/addsched"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
